<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashFragment">

    <fragment android:id="@+id/splashFragment"
        android:name="com.bhanupro.eezyui.ui.SplashFragment"
        android:label="splash_fragment"
        tools:layout="@layout/fragment_splash">

        <action android:id="@+id/action_splashFragment_to_doublePlanFragment"
            app:destination="@id/doublePlanFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"/>
    </fragment>
    <fragment android:id="@+id/doublePlanFragment"
        android:name="com.bhanupro.eezyui.ui.DoublePlanFragment"
        android:label="double_plan_fragment"
        tools:layout="@layout/fragment_double_plan"/>
</navigation>