<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    app:navigationIcon="@drawable/ic_back"
    app:title="@null"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="10dp"
    android:layout_marginEnd="0dp"
    android:gravity="center_vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginStart="0dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_plans"
            android:textAppearance="?textAppearanceSubtitle1"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/pending_plans_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_pending_plans"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/count_round_bg"
            android:text="3"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="10sp"
            android:paddingTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/pending_plans_img"
            app:layout_constraintEnd_toEndOf="@+id/pending_plans_img"
            app:layout_constraintHorizontal_bias="0.80"
            app:layout_constraintStart_toStartOf="@+id/pending_plans_img"
            app:layout_constraintTop_toTopOf="@+id/pending_plans_img"
            app:layout_constraintVertical_bias="0.81" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>